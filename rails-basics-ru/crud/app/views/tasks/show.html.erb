<h1>Task number <%= @task.id %></h1>


<p><%= @task.name %></p>

<p><%= @task.discription %></p>

<p>Status : <%= @task.status %></p>

<p>Created by : <%= @task.creator%></p>

<p>Task for : <%= @task.performer %></p>

<p>Completed : <%= @task.completed %></p>

<p><%= link_to 'Edit', edit_task_path(@task) %></p>
<p><%= button_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?'  } %></p>
